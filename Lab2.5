		AREA RESET,DATA,READONLY
			DCD 0x20001000
			DCD Reset_Handler
		;ALIGN
	arMatran		DCD		1, 6, 10
					DCD		4, 2, 0
					DCD		5, 25, 0
		
		AREA MYCODE,CODE,READONLY
		ENTRY
		EXPORT Reset_Handler
		
	Reset_Handler
	SoPTMaTran	equ		9
	
	start
			mov		R0, #0
			mov		R2, #1
			ldr		R3, =SoPTMaTran
			ldr		R1, =arMatran
	LapTinh
			ldr		R4, [R1] ;nap phan tu hien tai cua ma tran tu bo nho vao thanh ghi R4
			
			;kiem	tra am, duong, va dem
			cmp		R4, #0
			blt		Am
			bgt		Duong
			b		ThayDoi
	Am
			add		R0,r0, #1
			b		ThayDoi
	Duong
			add		R5,r5, #1
			b		ThayDoi
			
			;thay	doi bien dem va dia chi
	ThayDoi
			add		R2,r2, #1
			add		R1,r1, #4
			
			cmp		R2, R3
			ble		LapTinh
			;ket		thuc: R0 = so phan tu am; R5 = so phan tu duong

		
	stop b stop
		END
